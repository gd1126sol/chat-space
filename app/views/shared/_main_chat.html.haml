.chat-main
  .chat-main__info
    .chat-main__info__boxleft
      %h2.chat-main__info__boxleft__group-name
        = @group.name
      %ul.chat-main__info__boxleft__member-list
        Member :
        - @group.users.each do |user|
          %li.chat-main__info__boxleft__member-list__member-name
            = user.name
            
    = link_to edit_group_path(@group)  do
      .chat-main__info__boxright
        Edit


  .chat-main__list
    = render @messages
  
  
  
  .chat-main__form
    = form_for [@group,@message] do |f|
      .chat-main__form__new-message
        .chat-main__form__new-message__input-box
          = f.text_field :text, class: 'chat-main__form__new-message__input-box__text'
          = f.label :image,class:'chat-main__form__new-message__input-box__label' do
            = icon('far','image')
            = f.file_field :image,class:'chat-main__form__new-message__input-box__label__none'
        = f.submit 'Send',class:'chat-main__form__new-message__send'

    